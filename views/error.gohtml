{[/* layout: basic */]}

{[define "style"]}
<style>
div#app {
    max-width: 100%;
    margin: auto;
    padding-top: 6.4em;
}

div#message {
    max-width: 100%;
    padding-top: 3.4em;
} 

div#message p {
    text-align: center;
    color: #313536;
    font-size: 1.8em;
    font-family: "PingFangSC-Regular";
}

div#goback {
    max-width: 65%;
    margin: 4.0em auto;
}
</style>
{[end]}

{[define "body"]}
<div id='app'>
    <div id='message'><p>{[.]}</p></div>
    <div id='goback' v-if='hasHistory'>
        <button type='button' class='btn-send' @click='goback'>返回</button>
    </div>
</div>
{[end]}

{[define "script"]}
<script>
var vm = new Vue({
    el: '#app',
    data: {
        hasHistory: window.history.length > 1,
    },
    methods: {
        goback: function() { window.history.back(); },
    },
})
</script>
{[end]}